<div class="row">
  <div class="col-md-8 col-md-offset-2">

    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">
          <%= @case.plaintiff %> vs <%= @case.defendant %>
        </h3>
        <p>
          <%= @case.number.upcase %> â€“
          <%= @case.venue %>, <%= @case.matter_type.titleize %> |
          Lead Attorney, <%= @case.lead_atty %>
        </p>
      </div>
      <div class="panel-body">
        <table class="table">
          <caption>Docket Entries</caption>
          <thead>
            <tr>
              <th>Entry #</th>
              <th>Date</th>
              <th>Summary</th>
              <th>Docs</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% @case.entries.each do |entry| %>
            <tr>
            <td><%= entry.seq_number %></td>
            <td><%= entry.entered_on %></td>
            <td><%= entry.summary %></td>
            <td><%= entry.doc_url %></td>
            <td>
              <button type="button" class="btn btn-warning">
                <%= link_to "Edit Entry", edit_case_entry_path(@case, entry) %>
              </button>
              <button type="button" class="btn btn-danger">
                <%= link_to "Delete Entry", delete_case_entry_path(entry) %>
              </button>
            </tr>
            <% end %>
          </tbody>
        </table>
        <button type="button" class="btn btn-primary">
          <%= link_to "Add new entry", new_case_entry_path(@case) %>
        </button>
      </div>

    </div>

  </div>
</div>
